# =====================================================
# Simple3DViewer - EditorConfig
# https://editorconfig.org
# =====================================================

# Главный файл конфигурации
root = true

# =====================================================
# Общие настройки для всех файлов
# =====================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =====================================================
# Java файлы
# =====================================================
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

# =====================================================
# XML файлы (pom.xml, FXML)
# =====================================================
[*.xml]
indent_style = space
indent_size = 4

[*.fxml]
indent_style = space
indent_size = 4

# =====================================================
# CSS файлы
# =====================================================
[*.css]
indent_style = space
indent_size = 4

# =====================================================
# Properties файлы
# =====================================================
[*.properties]
indent_style = space
indent_size = 4
charset = utf-8

# =====================================================
# JSON файлы
# =====================================================
[*.json]
indent_style = space
indent_size = 2

# =====================================================
# YAML файлы
# =====================================================
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# =====================================================
# Markdown файлы
# =====================================================
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# =====================================================
# Shell скрипты
# =====================================================
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# =====================================================
# Batch файлы Windows
# =====================================================
[*.{bat,cmd}]
indent_style = space
indent_size = 2
end_of_line = crlf

# =====================================================
# Makefile
# =====================================================
[Makefile]
indent_style = tab

# =====================================================
# Git файлы
# =====================================================
[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2
